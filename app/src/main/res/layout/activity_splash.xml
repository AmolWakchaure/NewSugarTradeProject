<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green_color"
    tools:context=".SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_216sdp"
            android:layout_height="@dimen/_216sdp"
            android:src="@drawable/new_registration" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crc55"
            android:gravity="center"
            android:text="Sugar Catalog"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_30sdp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>