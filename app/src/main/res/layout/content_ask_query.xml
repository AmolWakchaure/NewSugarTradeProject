<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.AskQueryActivity"
    tools:showIn="@layout/activity_ask_query">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textColor="@color/color_black"
            android:fontFamily="@font/crc55"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/AskQueryActivityEdtSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/new_style_container"
            android:inputType="textNoSuggestions"
            android:padding="@dimen/spacing_middle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Description"
            android:textStyle="bold"
            android:fontFamily="@font/crc55"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_12sdp" />


        <EditText
            android:id="@+id/AskQueryActivityEdtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="top"
            android:hint="Write description"
            android:lines="4"
            android:background="@drawable/new_style_container"
            android:padding="@dimen/spacing_middle" />



        <Button
            android:id="@+id/AskQueryActivityBtnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_green_300"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="SUBMIT"
            android:textColor="@color/color_white" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>