<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LinaerLayoutUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_style_container"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/crc55"
                android:gravity="left"
                android:text="Me :- "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/QueryDetailsAdapterTxtQuery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_weight="7"
                android:gravity="left"
                android:text=""
                android:textColor="@color/color_black" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinaerLayoutAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_style_container"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:id="@+id/QueryDetailsAdapterTxtReply"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="7"
                android:gravity="right"
                android:text=""
                android:textColor="@color/color_black" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/crc55"
                android:gravity="left"
                android:text=" -: Admin"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

